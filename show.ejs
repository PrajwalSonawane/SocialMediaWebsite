<%- include("../partials/header") %>

    <div class="container">

        <!-- Timeline
        ================================================= -->
        <div class="timeline">
          <div class="timeline-cover">
            <% if(user.cover_image) { %>
            <img src="<%= user.cover_image %>" class="cover-photo">
            <% } %>
            <!--Timeline Menu for Large Screens-->
            <div class="timeline-nav-bar hidden-sm hidden-xs">
              <div class="row">
                <div class="col-md-3">
                  <div class="profile-info">
                    <% if(user.image_url) { %>
                    <img src="<%= user.image_url %>" alt="" class="img-responsive profile-photo" />
                    <% } else { %>
                    <img src="/images/dp.png" alt="" class="img-responsive profile-photo" />
                    <% } %>
                    <h3><a href="/profile/<%= user.id %>" ><%= user.username %></a></h3>
                    <p><%= user.email %></p>
                    <% if (currentuser != undefined) { %>
                        <% if(user.id === currentuser.id) { %>
                            <a href="/profile/<%= user.id %>/edit" class="btn btn-primary">Edit profile</a>
                        <% } %>
                        <% } %>
                    <!-- <p class="text-muted">Creative Director</p> -->
                  </div>
                </div>
                <div class="col-md-9">
                  <ul class="list-inline profile-menu">
                    <li><a href="/profile/<%= user.id %>" class="active">About</a></li>
                    <li><a href="/profile/<%= user.id %>/album">Album</a></li>
                    <li><a href="/profile/<%= user.id %>/friends">Friends</a></li>


                      <!-- The Modal -->
                      <div class="modal fade" id="myModal">
                        <form class="" action="/message/<%= user.id %>" method="post">
                        <div class="modal-dialog">
                          <div class="modal-content">

                            <!-- Modal Header -->
                            <div class="modal-header">
                              <h4 class="modal-title">Please type the message you want to send</h4>
                              <button type="button" class="close" data-dismiss="modal">&times;</button>
                            </div>

                            <!-- Modal body -->
                            <div class="modal-body">
                              <textarea name="message" rows="8" cols="80"></textarea>
                            </div>

                            <!-- Modal footer -->
                            <div class="modal-footer">

                                <button type="submit" class="btn btn-success">Send</button>
                                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>


                            </div>

                          </div>
                        </div>
                        </form>
                      </div>

                  </ul>
                  <ul class="follow-me list-inline">
                    <li><%= friend_count %> Friends</li>

                    <% if (k == 1) { %>
                        <li><a href="/addfriend/<%= user.id %>"><button class="btn-primary">Add Friend</button></a></li>
                    <% } else if (k == 2) { %>
                        <li><button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal">Message</button></li>
                    <% } else if (k == 3) { %>
                        <li><button class="btn-primary">Request Sent</button></li>
                    <% } %>


                  </ul>
                </div>
               </div>
            </div>
            </div>
            <div id="page-contents">
                <div class="row">
                  <div class="col-md-3"></div>
                  <div class="col-md-7">

                    <% if(user.id === currentuser.id) { %>
                    <!-- Post Create Box
                    ================================================= -->
                    <div class="create-post">
                      <div class="row">
                        <div class="col-md-2 col-sm-2">
                          <% if(currentuser.image_url) { %>
                            <img src="<%= currentuser.image_url %>" alt="user" class="profile-photo" />
                            <% } else { %>
                            <img src="/images/dp.png" alt="user" class="profile-photo" />
                            <% } %>
                        </div>
                        <div class="col-md-10 col-sm-10">
                          <form action="/" method="POST">
                            <div class="form-group">
                               <textarea id="exampleTextarea" cols="120" style="margin-bottom: 5px  ;"rows="2" name="newspost" class="form-control" placeholder="Write what you wish"></textarea>
                            </div>
                            <div class=""form-group>
                               <input type=" text" name="postImage" class="form-control"  style="margin-bottom: 5px  ;"placeholder="Enter post image">
                            </div>
                            <button class="btn btn-primary ">Post</button>
                          </form>
                          </div>
                      </div>
                    </div>
                    <% } %>

                    <div class="about-profile">
                        <div class="about-content-block">
                          <h4 class="grey">Personal Information</h4>
                          <p>Studies at <%= user.college %></p>
                          <p>Lives in <%= user.hometown %></p>
                          <p>From <%= user.state %></p>
                          <p>Date of Birth: <%= user.dob %></p>
                          <p></p>
                        </div>
                    </div>
                </div>
            </div>
            </div>

<%- include("../partials/footer") %>
